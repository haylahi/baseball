<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@class='o_address_format']" position="after">
                    <br/>
                    <label for="field_street" string="Field address"/>
                    <div class="o_address_format" attrs="{'invisible': [('is_company','!=', True)]}">
                        <field name="field_street" placeholder="Street..." class="o_address_street"/>
                        <field name="field_city" placeholder="City" class="o_address_city"/>
                        <field name="field_zip" placeholder="ZIP" class="o_address_zip"/>
                        <field name="field_country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                    </div>
                </xpath>               
            </field>
        </record>

	</data>
</openerp>

