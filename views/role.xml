<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>


        <record id="view_phoenix_roles_tree" model="ir.ui.view">
            <field name="name">phoenix.roles.tree</field>
            <field name="model">phoenix.roles</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Roles">
                    <field name="name"/>
                </tree>
            </field>
        </record>




        <record id="view_phoenix_roles_form" model="ir.ui.view">
            <field name="name">phoenix.roles.form</field>
            <field name="model">phoenix.roles</field>
            <field name="arch" type="xml">
                <form string="Members">
                <sheet>
                    <div class="oe_title oe_left">
                        <h1>
                            <field name="name" placeholder="Name" />
                        </h1>
                    </div>
                    <field name="description"/>
                    
                </sheet>
                </form>
            </field>
        </record>

       <record id="view_roles_filter" model="ir.ui.view">
            <field name="name">phoenix.roles.search</field>
            <field name="model">phoenix.roles</field>
            <field name="arch" type="xml">
                <search>
                  <field name="name"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="phoenix_list_roles">
            <field name="name">roles</field>
            <field name="res_model">phoenix.roles</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>



        <menuitem id="menu_roles_management" name="Roles"
                  parent="menu_management"
                  action="phoenix_list_roles"
                  sequence="10"
                  />

	</data>
</openerp>

