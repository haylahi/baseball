<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

<template id="profile" name="Profile page">                
  <t t-call="website.layout">
      <div id="wrap" class="js_sale">
        <div class="oe_structure"/>
          <div class="container">
            <div class='row'>
              <div class="col-lg-12">
                <div class="panel panel-default">
                  <div class="panel-heading"><h3 class="panel-title" t-field="user.partner_id.name"/></div>
                  <div class="panel-body">
                    <table class="table table-condensed table-profile">
                      <tbody>
                          <tr>
                            <td style="font-weight: bold;">Name</td>
                            <td><span t-field="user.partner_id.name"/></td>
                          </tr><tr>
                            <td style="font-weight: bold;">Email</td>
                            <td><span t-field="user.partner_id.email"/></td>
                            <td style="font-weight: bold;">Address</td>
                            <td><span t-field="user.partner_id.street"/></td>
                          </tr><tr>
                            <td style="font-weight: bold;">Birthdate</td>
                            <td><span t-field="user.partner_id.birthdate"/></td>
                            <td/>
                            <td><span t-field="user.partner_id.street2"/></td>
                          </tr><tr>
                            <td style="font-weight: bold;">Phone</td>
                            <td><span t-field="user.partner_id.phone"/></td>
                            <td/>
                            <td><span t-field="user.partner_id.zip"/> <span t-field="user.partner_id.city"/></td>
                          </tr><tr>
                            <td style="font-weight: bold;">Mobile</td>
                            <td><span t-field="user.partner_id.mobile"/></td>
                            <td style="font-weight: bold;">Nationality</td>
                            <td><span t-field="user.partner_id.country_id.name"/></td>
                          </tr><tr>
                            <td style="font-weight: bold;">Gender</td>
                            <td><span t-field="user.partner_id.gender"/></td>
                          </tr>
                      </tbody>
                    </table>
                    <div >
                      <span>Missing or erroneous data? Update them</span>
                      <br/>
                      <a href="/web/update_profile" class="btn btn-primary">Update</a>
                    </div>
                  </div>
                </div>  
              </div>
            </div>
          </div>
        <div class="oe_structure mb32"/>
      </div>
  </t>
</template>



  </data>
</openerp>