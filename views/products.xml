<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_phoenix_jerseys_form" model="ir.ui.view">
            <field name="name">phoenix.jerseys.form</field>
            <field name="model">phoenix.jerseys</field>
            <field name="arch" type="xml">
                <form>
                <sheet>
                    <field name="image" widget='image' class="oe_left oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
                    <div class="oe_title oe_left">
                        <h1>
                            <field name="name" placeholder="Name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="price" widget="monetary" options="{'currency': %(base.EUR)d}"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page name="jerseys" string="Jerseys">
                            <field name="jerseys_ids" context="{'form_view_ref':'phoenix.view_phoenix_jerseysitem_form'}">
                                <tree>
                                    <field name="number"/>
                                    <field name="size"/>
                                    <field name="state"/>
                                    <field name="member_id"/>
                                </tree>
                            </field>
                        </page>
                        <page name="jersey_description" string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>                    
                </sheet>
                </form>
            </field>
        </record>



        <record id="view_phoenix_jerseys_tree" model="ir.ui.view">
            <field name="name">phoenix.jerseys.tree</field>
            <field name="model">phoenix.jerseys</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="price" widget="monetary" options="{'currency': %(base.EUR)d}"/>
                </tree>
            </field>
        </record>


        <record id="view_phoenix_jerseysitem_form" model="ir.ui.view">
            <field name="name">phoenix.jerseysitem.form</field>
            <field name="model">phoenix.jerseysitem</field>
            <field name="arch" type="xml">
                <form>
                <sheet>
                    <group>
                        <field name="number"/>
                        <field name="size" />
                        <field name="state"/>
                        <field name="member_id"/>
                    </group>                
                </sheet>
                </form>
            </field>
        </record>

        <record id="view_phoenix_jerseysitem_tree" model="ir.ui.view">
            <field name="name">phoenix.jerseysitem.tree</field>
